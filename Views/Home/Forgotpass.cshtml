@{
    Layout = null;
}

<link rel="icon" type="image/x-icon" href="/images/favicon.ico">
<title>Solivio - Forgot Password</title>

<style>
    :root {
        --primary-color: #2F4F4F;
        --white: #ffffff;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--white);
        padding: 1rem;
    }

    .forgotpass-container {
        width: 100%;
        max-width: 450px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .icon-container {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .lock-icon {
        width: 60px;
        height: 60px;
        margin-bottom: 1rem;
    }

    .title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #333;
    }

    .description {
        text-align: center;
        color: black;
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 2rem;
        max-width: 350px;
    }

    .forgotpass-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-input {
        padding: 0.8rem 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
        width: 100%;
    }

        .form-input:focus {
            border-color: var(--primary-color);
        }

    .next-button {
        background-color: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 4px;
        padding: 0.8rem;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }

        .next-button:hover {
            background-color: #3d6666;
        }

    .divider {
        display: flex;
        align-items: center;
        margin: 2rem 0;
        width: 100%;
        color: #666;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

    .divider-text {
        padding: 0 1rem;
        font-size: 14px;
    }

    .create-account {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
    }

        .create-account:hover {
            text-decoration: underline;
        }
</style>
<body>
    <div class="forgotpass-container">
        <div class="icon-container">
            <img src="~/images/forgotpass-icon.png" alt="Lock Icon" class="lock-icon" />
            <h1 class="title">Trouble logging in?</h1>
            <p class="description">
                Enter your email or username, and we'll help you to get back into your account.
            </p>
        </div>

        <form class="forgotpass-form" action="/Home/Securityquestion"  method="post">
            <input type="text" class="form-input" id="emailOrUsername" name="emailOrUsername" placeholder="Email or Username" required />
            <button type="submit" class="next-button">Next</button>
        </form>

        <div class="divider">
            <span class="divider-text">OR</span>
        </div>

        <a href="/Home/Signup" class="create-account">Create new account</a>
    </div>
</body>