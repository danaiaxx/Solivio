@{
    Layout = null;
}

<link rel="icon" type="image/x-icon" href="/images/favicon.ico">
<title>Solivio - Login</title>

    <style>
        :root {
            --primary-color: #2F4F4F;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            overflow: hidden;
        }

        .image-section {
            flex: 1;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .collage-container {
            position: relative;
            width: 80%;
            height: 80%;
        }

        .collage-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .login-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
        }

        .brand {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-name {
            font-size: 2.5rem;
            font-weight: 700;
            font-style: italic;
            margin-bottom: 0.5rem;
        }

        .brand-tagline {
            margin-top: 0.5rem;
            color: black;
            font-size: 1rem;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-input {
            padding: 0.8rem 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            outline: none;
            transition: border-color 0.3s;
        }

        .form-input:focus {
            border-color: var(--primary-color);
        }

        .login-button {
            background-color: var(--primary-color);
            color: var(--white);
            border: none;
            border-radius: 4px;
            padding: 0.8rem;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 0.5rem;
        }

        .login-button:hover {
            background-color: #3d6666;
        }

        .forgot-password {
            text-align: center;
            margin-top: 1rem;
        }

        .forgot-password a {
            color: black;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .signup-prompt {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.9rem;
            color: black;
        }

        .signup-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }

        .signup-link:hover {
            text-decoration: underline;
        }
    </style>

<body>
    <div class="image-section">
        <div class="collage-container">
            <img src="~/images/hero-image.png" alt="Travel collage" class="collage-image" />
        </div>
    </div>

    <div class="login-section">
        <div class="login-container">
            <div class="brand">
                <img src="~/images/Solivio.png" alt="Solivio Logo" height="35" />
                <p class="brand-tagline">Adventures in Solitude</p>
            </div>

            <form class="login-form" action="/Home/Feed" method="post">
                <div class="form-group">
                    <input type="text" class="form-input" id="email" name="email" placeholder="Email or Username" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" id="password" name="password" placeholder="Password" required />
                </div>
                <button type="submit" class="login-button">Log in</button>
            </form>

            <div class="forgot-password">
                <a href="/Home/Forgotpass">Forgot password?</a>
            </div>

            <div class="signup-prompt">
                Don't have an account? <a href="/Home/Signup" class="signup-link">Sign up</a>
            </div>
        </div>
    </div>
</body>
