@model List<Solivio.Models.Post>

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

@{
    ViewData["Title"] = "Profile";
}

<div class="profile-page">
    <div class="profile-header">
        <div class="profile-info">
            <div class="profile-image-container">
                <img src="@Url.Action("GetProfileImage", "Home")?t=@DateTime.Now.Ticks" alt="Profile" class="profile-image" />
            </div>
            <div class="profile-details">
                <div class="profile-name-actions">
                    <h1 class="profile-name">@username</h1>
                    <a href="/Home/Settings" class="edit-profile-btn">Edit profile</a>
                </div>
                <div class="profile-stats">
                    <div class="stat-item">
                        <span class="stat-value">@ViewBag.PostCount</span>
                        <span class="stat-label">Posts</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="profile-divider" />

    <div class="posts-grid">
        @foreach (var post in Model)
        {
            <div class="post-item" data-post-id="@post.Id">
                @{
                    var firstImage = post.Images?.FirstOrDefault();
                    var imageUrl = firstImage != null
                    ? Url.Action("GetPostImage", "Home", new { imageId = firstImage.Id })
                    : "https://via.placeholder.com/300";
                }
                <img src="@imageUrl" alt="Post Image" class="post-thumbnail" />
                <p>@post.Caption</p>
            </div>
        }
    </div>

</div>

<style>
    .main-content {
        background-color: white;
    }

    .right-navbar {
        display: none;
    }

    .main-content {
        margin-right: 0;
    }

    .profile-page {
        max-width: 935px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .profile-header {
        margin-bottom: 44px;
    }

    .profile-info {
        display: flex;
        align-items: center;
    }

    .profile-image-container {
        margin-right: 80px;
    }

    .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .profile-details {
        flex: 1;
    }

    .profile-name-actions {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-name {
        font-size: 28px;
        font-weight: bold;
        margin: 0;
        margin-right: 20px;
        color: black;
    }

    .edit-profile-btn {
        padding: 5px 9px;
        background-color: #2F4F4F;
        color: white;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        transition: background-color 0.2s;
    }

        .edit-profile-btn:hover {
            background-color: #3d6666;
        }

    .profile-stats {
        display: flex;
        margin-bottom: 20px;
    }

    .stat-item {
        margin-right: 40px;
        font-size: 16px;
    }

    .stat-value {
        font-weight: 600;
        color: black;
    }

    .stat-label {
        color: #898F99;
        margin-left: 5px;
    }

    .profile-divider {
        border: none;
        border-top: 1px solid #dbdbdb;
        margin: 0 0 44px 0;
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
    }

    .post-item {
        aspect-ratio: 1/1;
        overflow: hidden;
        position: relative;
    }

    .post-thumbnail {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
