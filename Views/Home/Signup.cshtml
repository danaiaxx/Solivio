@{
    Layout = null;
}

<link rel="icon" type="image/x-icon" href="/images/favicon.ico">
<title>Solivio - Sign up</title>

<style>
    :root {
        --primary-color: #2F4F4F;
        --white: #ffffff;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--white);
        padding: 1rem;
    }

    .signup-container {
        width: 100%;
        max-width: 450px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .brand {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .brand-name {
        font-size: 2.5rem;
        font-weight: 700;
        font-style: italic;
        margin-bottom: 0.5rem;
    }

    .brand-tagline {
        color: black;
        font-size: 14px;
        text-align: center;
        max-width: 300px;
        margin: 0 auto 1.5rem;
        line-height: 1.4;
        margin-top: 0.5rem;
    }

    .signup-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-input {
        padding: 0.8rem 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
        width: 100%;
    }

        .form-input:focus {
            border-color: var(--primary-color);
        }

    .form-select {
        padding: 0.8rem 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
        width: 100%;
        background-color: var(--white);
        cursor: pointer;
    }

        .form-select:focus {
            border-color: var(--primary-color);
        }

    .recovery-label {
        font-size: 14px;
        color: #333;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        position: relative;
    }

    .info-icon {
        width: 7px;
        height: 7px;
        cursor: help;
        position: relative;
        display: inline-block;
    }

    .tooltip {
        position: relative;
        display: inline-block;
    }

        .tooltip .tooltip-text {
            visibility: hidden;
            width: 250px;
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            text-align: center;
            padding: 8px;
            border-radius: 6px;
            font-size: 0.8rem;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            transition: opacity 0.3s;
        }
            .tooltip .tooltip-text::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: rgba(0, 0, 0, 0.8) transparent transparent transparent;
            }

        .tooltip:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }

    .signup-button {
        background-color: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 4px;
        padding: 0.8rem;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 0.5rem;
        width: 100%;
    }

        .signup-button:hover {
            background-color: #3d6666;
        }

    .login-prompt {
        text-align: center;
        margin-top: 2rem;
        font-size: 0.9rem;
        color: black;
    }

    .login-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>
<body>
    <div class="signup-container">
        <div class="brand">
            <img src="~/images/Solivio.png" alt="Solivio Logo" height="35" />
            <p class="brand-tagline">Sign up to see photos of the world from solo travelers alike.</p>
        </div>

        <form class="signup-form" method="post">
            <div class="form-group">
                <input type="email" class="form-input" id="email" name="email" placeholder="Email" required />
            </div>
            <div class="form-group">
                <input type="password" class="form-input" id="password" name="password" placeholder="Password" required />
            </div>
            <div class="form-group">
                <input type="text" class="form-input" id="username" name="username" placeholder="Username" required />
            </div>

            <div class="form-group">
                <label class="recovery-label">
                    Account recovery
                    <div class="tooltip">
                        <img src="~/images/info-icon.png" alt="Info" class="info-icon" />
                        <span class="tooltip-text">We'll ask this question if you ever forget your password.</span>
                    </div>
                </label>
                <select class="form-select" id="securityQuestion" name="securityQuestion" required>
                    <option value="" disabled selected>Security question</option>
                    <option value="What was your first pet's name?">What was your first pet's name?</option>
                    <option value="What elementary school did you attend?">What elementary school did you attend?</option>
                    <option value="In what city were you born?">In what city were you born?</option>
                    <option value="What is your mother's maiden name?">What is your mother's maiden name?</option>
                    <option value="What is your favorite book?">What is your favorite book?</option>
                </select>
            </div>

            <div class="form-group">
                <input type="text" class="form-input" id="securityAnswer" name="securityAnswer" placeholder="Your Answer" required />
            </div>

            <button type="submit" class="signup-button">Sign up</button>
        </form>

        <div class="login-prompt">
            Have an account? <a href="/Home/Login" class="login-link">Log in</a>
        </div>
    </div>
</body>