@{
    Layout = null;
    var securityQuestion = ViewData["SecurityQuestion"]?.ToString() ?? "Security question not found.";
}

<link rel="icon" type="image/x-icon" href="/images/favicon.ico">
<title>Solivio - Security Question</title>

<style>
    :root {
        --primary-color: #2F4F4F;
        --white: #ffffff;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--white);
        padding: 1rem;
    }

    .security-container {
        width: 100%;
        max-width: 450px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .icon-container {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .question-icon {
        width: 60px;
        height: 60px;
        margin-bottom: 1rem;
    }

    .title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #333;
    }

    .description {
        text-align: center;
        color: black;
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 2rem;
        max-width: 350px;
    }

    .security-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .question-text {
        font-weight: 600;
        color: black;
        font-size: 14px;
    }

    .form-input {
        padding: 0.8rem 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
        width: 100%;
    }

        .form-input:focus {
            border-color: var(--primary-color);
        }

    .next-button {
        background-color: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 4px;
        padding: 0.8rem;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }

        .next-button:hover {
            background-color: #3d6666;
        }

    .divider {
        display: flex;
        align-items: center;
        margin: 2rem 0;
        width: 100%;
        color: #666;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

    .divider-text {
        padding: 0 1rem;
        font-size: 14px;
    }

    .go-back {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
    }

        .go-back:hover {
            text-decoration: underline;
        }
</style>
<body>
    <div class="security-container">
        <div class="icon-container">
            <img src="~/images/question-icon.png" alt="Question Icon" class="question-icon" />
            <h1 class="title">Answer security question</h1>
            <p class="description">
                To confirm it's really you, please answer the question you chose during sign up.
            </p>
        </div>

        <form class="security-form" asp-action="Securityquestion"  method="post">
            <input type="hidden" id="emailOrUsername" name="emailOrUsername" value="@ViewData["EmailOrUsername"]" />

            <div class="question-text">@securityQuestion</div>

            <input type="text" class="form-input" id="securityAnswer" name="securityAnswer" placeholder="Your Answer" required />
            <button type="submit" class="next-button">Next</button>
        </form>

        <div class="divider">
            <span class="divider-text">OR</span>
        </div>

        <a href="/Home/Login" class="go-back">Go back</a>
    </div>
</body>